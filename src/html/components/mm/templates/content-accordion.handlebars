                    {{> unordered-list}}

                    <button class="accordion__heading" aria-expanded="false" id="accordion{{this.id}}id"
                        aria-controls="content-{{this.id}}-2">Ordered list<i aria-hidden="true"
                            class="fas fa-plus-square accordion__icon accordion__icon__plus"></i><i aria-hidden="true"
                            class="fas fa-minus-square accordion__icon accordion__icon__minus"></i></button>
                    {{> ordered-list}}

                    <button class="accordion__heading" aria-expanded="false" id="accordion{{this.id}}id"
                        aria-controls="content-{{this.id}}-3">Single Group<i aria-hidden="true"
                            class="fas fa-plus-square accordion__icon accordion__icon__plus"></i><i aria-hidden="true"
                            class="fas fa-minus-square accordion__icon accordion__icon__minus"></i></button>
                    {{> single-group}}

                    <button class="accordion__heading" aria-expanded="false" id="accordion{{this.id}}id"
                        aria-controls="content-{{this.id}}-4">Multiple Group<i aria-hidden="true"
